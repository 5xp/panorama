<root>
	<styles>
		<include src="file://{resources}/styles/chaosstyles.css" />
		<include src="file://{resources}/styles/player_card.css" />
	</styles>
	<scripts>
		<include src="file://{resources}/scripts/player_card.js" />
	</scripts>

	<Panel onload="PlayerCard.onLoad()">
		<Image class="full-width full-height" src="file://{images}/card_bg.png" scaling="stretch-to-cover-preserve-aspect" />
		<Panel id="BlackOverlay" /> <!-- 50% opacity black overlay to make the white text readable -->
		<Panel id="PlayerCard">
			<ChaosAvatarImage id="PlayerAvatar" steamid="local" />
			<Panel id="PlayerDetails">
				<Label id="PlayerName" class="drop-shadow" text="{s:name}" />
				<Panel id="Units" class="left-right-flow">
					<Image src="file://{images}/icon_Units.svg" textureheight="18" />
					<Label text="{d:money}" />
				</Panel>
				<Panel id="XpAndLevel">
					<Panel id="XpContainer">
						<Label class="xp drop-shadow" text="{d:xp} / {d:totalxp} xp" />
						<ProgressBar id="XpProgressBar" />
					</Panel>
					<!-- Level added here in JS -->
				</Panel>
			</Panel>
		</Panel>
	</Panel>
</root>