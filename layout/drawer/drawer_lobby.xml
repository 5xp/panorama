<root>
    <styles>
        <include src="file://{resources}/styles/chaosstyles.css" />
        <include src="file://{resources}/styles/mainmenu_drawer.css" />
        <include src="file://{resources}/styles/drawer/drawer_lobby.css" />
    </styles>
    <scripts>
        <include src="file://{resources}/scripts/drawer/drawer_lobby.js" />
    </scripts>
    <snippets>
        <snippet name="lobby-list-entry">
            <Panel class="lobby-entry">
                <ChaosAvatarImage id="LobbyPlayerAvatar" class="lobby-entry-avatar"/>
                <Image id="LobbyType"/>
                <Label id="LobbyTitle" text="{s:lobby_title}" class="lobby-entry-text"/>
                <Label id="LobbyPlayerNumbers" text="{s:lobby_playercount}" class="lobby-entry-text"/>
                <Button id="LobbyJoinButton" class="lobby-entry-button">
                    <Label id="LobbyJoinButtonLabel" text="{s:lobby_joinlabel}"/>
                </Button>
            </Panel>
        </snippet>
        <snippet name="lobby-member-entry">
            <Panel class="lobby-entry">
                <ChaosAvatarImage id="MemberAvatar" class="lobby-entry-avatar"/>
                <Label id="MemberName" text="{s:member_name}" class="lobby-entry-text"/>
                <!--<Label id="MemberPrestige" /> -->
                <Label id="MemberMap" text="{s:member_map}" class="lobby-entry-text"/>
                <Button id="MemberJoinButton" class="lobby-entry-button">
                    <Label id="MemberJoinButtonLabel" text="{s:member_joinlabel}"/>
                </Button>
            </Panel>
        </snippet>
    </snippets>

    <Panel class="lobby-drawer-tab full-width full-height no-flow">
        <Panel id="LobbyListContainer" class="full-width top-bottom-flow">
            <Label class="lobby-header" text="BROWSING LOBBIES"/>
            <Panel id="LobbySearchBar">
                <Button id="LobbyListRefresh">
                    <Image id="LobbyListRefreshLogo" src="file://{images}/refresh.svg" textureheight="32" orientation="180" onactivate="SteamLobbyAPI.RefreshList({'this_is_where_filters_will_go_in_the_future' : 'true'});" />
                </Button>
                <Button id="LobbyListHost" onactivate="DrawerPanel_Lobby.create()">
                    <Image id="LobbyListHostLogo" src="file://{images}/plus.svg" textureheight="32" />
                </Button>
                <!--TextEntry id="LobbyListSearchText" /-->
                <!--Button id="LobbyListFilter"></Button-->
            </Panel>
            <Panel id="LobbyList" class="lobby-list">
                <!-- Panels get added via JS here -->
            </Panel>
        </Panel>

        <Panel id="LobbyDetailsContainer" class="full-width full-height top-bottom-flow hidden">
            <Panel id="LobbyDetailsHeaderBar" class="full-width left-right-flow">
                <Button id="LobbyDetailsBackButton" onactivate="DrawerPanel_Lobby.showLobbyList()">
                    <Image src="file://{images}/sidepanel/arrowIcon.svg" textureheight="32" orientation="180" />
                </Button>
                <Button id="LobbyDetailsSettingsButton" onactivate="$.Msg('Settings button not implemented')">
                    <Image src="file://{images}/topnav/settingsIcon.svg" textureheight="32" />
                </Button>
                <Button id="LobbyDetailsInviteButton" onactivate="SteamLobbyAPI.ShowInviteDialog()">
                    <Image src="file://{images}/lobby/lobbyinvitefriends.svg" textureheight="32" />
                </Button>
                <Button id="LobbyDetailsLeaveButton" onactivate="SteamLobbyAPI.Leave()">
                    <Image src="file://{images}/lobby/lobbyexit.svg" textureheight="32" />
                </Button>
                <Label text="Lobby"/>
            </Panel>
            <Panel id="LobbyDetailsMemberList" class="lobby-list">
                <!-- Panels get added via JS here -->
            </Panel>
            <!-- <ChatPanel??? /> -->
        </Panel>
    </Panel>
</root>