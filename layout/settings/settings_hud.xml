<root>
	<styles>
		<include src="file://{resources}/styles/main.scss" />
		<include src="file://{resources}/styles/settings/settings_shared.css" />
	</styles>
	
	<scripts>
		<include src="file://{resources}/scripts/settings_shared.js"/>
	</scripts>
	
	<Panel class="settings-tab">
		<Panel class="content-navbar tab-group">
			<RadioButton group="SettingsInputNavBar" onactivate='SettingsMenuShared.scrollToId("SettingsSpeedometer")'>
			  <Label text="#MOM_Settings_Speedometer_Label"/>
			</RadioButton>
			<RadioButton group="SettingsInputNavBar" onactivate='SettingsMenuShared.scrollToId("SettingsKeyPresses")'>
			  <Label text="Key Presses"/>
			</RadioButton>
			<RadioButton group="SettingsInputNavBar" onactivate='SettingsMenuShared.scrollToId("SettingsStrafeSync")'>
			  <Label text="Strafe Sync"/>
			</RadioButton>
		</Panel>
		
		<Panel class="settings-scroll-container">
			<Panel id="SettingsSpeedometer" class="settings-group">
				<Label class="text--h2" text="#MOM_Settings_Speedometer_Label" />
				
			</Panel>
			
			<Panel class="settings-horizontal-separator" />
			
			<Panel id="SettingsKeyPresses" class="settings-group">
				<Label class="text--h2" text="#MOM_Settings_Buttons_Label" />
				<TooltipPanel class="settings-tooltip" tooltip="#MOM_Settings_User_Input_HUD_TT">
					<ChaosSettingsEnum text="#MOM_Settings_User_Input_HUD" convar="mom_hud_keypress_enable">
						<RadioButton group="showkeys" text="Off" value="0" />
						<RadioButton group="showkeys" text="On" value="1" />
					</ChaosSettingsEnum>
				</TooltipPanel>
			</Panel>
			
			<Panel class="settings-horizontal-separator" />
			
			<!-- MOM_TODO: Should this go into gamemode specific? -->
			<Panel id="SettingsStrafeSync" class="settings-group">
				<Label class="text--h2" text="#MOM_Settings_Sync_Label" />
				
				<TooltipPanel class="settings-tooltip" tooltip="#MOM_Settings_Sync_Show_TT">
					<ChaosSettingsEnum text="#MOM_Settings_Sync_Show" convar="mom_hud_strafesync_draw">
						<RadioButton group="showsyncdata" text="Off" value="0" />
						<RadioButton group="showsyncdata" text="On" value="1" />
					</ChaosSettingsEnum>
				</TooltipPanel>
				<TooltipPanel class="settings-tooltip" tooltip="#MOM_Settings_Sync_Show_Bar_TT">
					<ChaosSettingsEnum text="#MOM_Settings_Sync_Show_Bar" convar="mom_hud_strafesync_drawbar">
						<RadioButton group="showsyncbar" text="Off" value="0" />
						<RadioButton group="showsyncbar" text="On" value="1" />
					</ChaosSettingsEnum>
				</TooltipPanel>
				<TooltipPanel class="settings-tooltip" tooltip="#MOM_Settings_Sync_Type_TT">
					<ChaosSettingsEnumDropDown text="#MOM_Settings_Sync_Type_Label" convar="mom_hud_strafesync_type">
						<Label id="synctype1" text="#MOM_Settings_Sync_Type_Sync1" value="1" />
						<Label id="synctype2" text="#MOM_Settings_Sync_Type_Sync2" value="2" />
					</ChaosSettingsEnumDropDown>
				</TooltipPanel>
				<TooltipPanel class="settings-tooltip" tooltip="#MOM_Settings_Sync_Color_Type_TT">
					<ChaosSettingsEnumDropDown text="#MOM_Settings_Sync_Color_Type_Label" convar="mom_hud_strafesync_colorize">
						<Label id="colorize1" text="#MOM_Settings_Sync_Color_Type_None" value="0" />
						<Label id="colorize2" text="#MOM_Settings_Sync_Color_Type_1" value="1" />
						<Label id="colorize3" text="#MOM_Settings_Sync_Color_Type_2" value="2" />
					</ChaosSettingsEnumDropDown>
				</TooltipPanel>
			</Panel>
		</Panel>
	</Panel>
</root>