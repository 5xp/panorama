<root>
	<styles>
		<include src="file://{resources}/styles/main.scss" />
		<include src="file://{resources}/styles/settings/settings_shared.css" />
	</styles>
	
	<scripts>
		<include src="file://{resources}/scripts/settings_shared.js"/>
	</scripts>
	
	<Panel class="settings-tab">
		<Panel class="content-navbar tab-group">
			<RadioButton group="SettingsInputNavBar" onactivate='SettingsMenuShared.scrollToId("SettingsOnlineGhostSettings")'>
			  <Label text="#MOM_Settings_Title_Online_Ghost"/>
			</RadioButton>
			<RadioButton group="SettingsInputNavBar" onactivate='SettingsMenuShared.scrollToId("SettingsPlayerGhostSettings")'>
			  <Label text="#MOM_Settings_Title_Online_Player"/>
			</RadioButton>
		</Panel>
		
		<Panel class="settings-scroll-container">
			<Panel id="SettingsOnlineGhostSettings" class="settings-group">
				<Label class="text-h2" text="#MOM_Settings_Title_Online_Ghost" />
				
				<TooltipPanel class="settings-tooltip" tooltip="#MOM_Settings_Override_Alpha_Enable_TT">
					<ChaosSettingsEnum text="#MOM_Settings_Override_Alpha_Enable" convar="mom_ghost_online_alpha_override_enable">
						<RadioButton group="ghostalpha" text="Off" value="0" />
						<RadioButton group="ghostalpha" text="On" value="1" />
					</ChaosSettingsEnum>
				</TooltipPanel>
				<TooltipPanel class="settings-tooltip" tooltip="#MOM_Settings_Override_Alpha_Amount_TT">
					<ChaosSettingsSlider text="" min="0" max="255" percentage="true" convar="mom_ghost_online_alpha_override" />
				</TooltipPanel>
				<TooltipPanel class="settings-tooltip" tooltip="#MOM_Settings_Online_Rotations_TT">
					<ChaosSettingsEnum text="#MOM_Settings_Online_Rotations" convar="mom_ghost_online_rotations">
						<RadioButton group="ghostrotation" text="Off" value="0" />
						<RadioButton group="ghostrotation" text="On" value="1" />
					</ChaosSettingsEnum>
				</TooltipPanel>
				<TooltipPanel class="settings-tooltip" tooltip="#MOM_Settings_Online_Sounds_TT">
					<ChaosSettingsEnum text="#MOM_Settings_Online_Sounds" convar="mom_ghost_online_flashlights_enable">
						<RadioButton group="ghostsounds" text="Off" value="0" />
						<RadioButton group="ghostsounds" text="On" value="1" />
					</ChaosSettingsEnum>
				</TooltipPanel>
				<TooltipPanel class="settings-tooltip" tooltip="#MOM_Settings_Entity_Panels_TT">
					<ChaosSettingsEnum text="#MOM_Settings_Entity_Panels" convar="mom_hud_ghost_entpanels_enable">
						<RadioButton group="ghostpanels" text="Off" value="0" />
						<RadioButton group="ghostpanels" text="On" value="1" />
					</ChaosSettingsEnum>
				</TooltipPanel>
				<TooltipPanel class="settings-tooltip" tooltip="#MOM_Settings_Online_Trails_TT">
					<ChaosSettingsEnum text="#MOM_Settings_Online_Trails" convar="mom_ghost_online_trail_enable">
						<RadioButton group="ghosttrail" text="Off" value="0" />
						<RadioButton group="ghosttrail" text="On" value="1" />
					</ChaosSettingsEnum>
				</TooltipPanel>
			</Panel>
			
			<Panel class="settings-horizontal-separator" />
			
			<Panel id="SettingsPlayerGhostSettings" class="settings-group">
				<Label class="text-h2" text="#MOM_Settings_Title_Online_Player" />
				<Panel class="full-width left-right-flow">
					<ModelPanel id="GhostModelPreview" src="models/player/player_shape_base.mdl" mouse_rotate="true" antialias="true" />
					<Panel class="fill-width top-bottom-flow">
						<ChaosSettingsEnumDropDown text="#MOM_Settings_Ghost_Body"
													convar="mom_ghost_bodygroup"
													oninputsubmit="SettingsMenuShared.onlineSettingsUpdateModel()">
							<Label text="#MOM_Settings_Bodygroup_0" value="0" id="bodygroup0" />
							<Label text="#MOM_Settings_Bodygroup_1" value="1" id="bodygroup1" />
							<Label text="#MOM_Settings_Bodygroup_2" value="2" id="bodygroup2" />
							<Label text="#MOM_Settings_Bodygroup_3" value="3" id="bodygroup3" />
							<Label text="#MOM_Settings_Bodygroup_4" value="4" id="bodygroup4" />
							<Label text="#MOM_Settings_Bodygroup_5" value="5" id="bodygroup5" />
							<Label text="#MOM_Settings_Bodygroup_6" value="6" id="bodygroup6" />
							<Label text="#MOM_Settings_Bodygroup_7" value="7" id="bodygroup7" />
							<Label text="#MOM_Settings_Bodygroup_8" value="8" id="bodygroup8" />
							<Label text="#MOM_Settings_Bodygroup_9" value="9" id="bodygroup9" />
							<Label text="#MOM_Settings_Bodygroup_10" value="10" id="bodygroup10" />
							<Label text="#MOM_Settings_Bodygroup_11" value="11" id="bodygroup11" />
							<Label text="#MOM_Settings_Bodygroup_12" value="12" id="bodygroup12" />
							<Label text="#MOM_Settings_Bodygroup_13" value="13" id="bodygroup13" />
							<Label text="#MOM_Settings_Bodygroup_14" value="14" id="bodygroup14" />
						</ChaosSettingsEnumDropDown>
						<TooltipPanel class="settings-tooltip" tooltip="#MOM_Settings_Enable_Trail_TT">
							<ChaosSettingsEnum text="#MOM_Settings_Enable_Trail" convar="mom_trail_enable">
								<RadioButton group="playertrail" text="Off" value="0" />
								<RadioButton group="playertrail" text="On" value="1" />
							</ChaosSettingsEnum>
						</TooltipPanel>
						<TooltipPanel class="settings-tooltip" tooltip="#MOM_Settings_Trail_Length_TT">
							<ChaosSettingsSlider text="#MOM_Settings_Trail_Length" min="0.1" max="10" displayprecision="1" convar="mom_trail_length" />
						</TooltipPanel>
					</Panel>
				</Panel>
			</Panel>
		</Panel>
	</Panel>
</root>