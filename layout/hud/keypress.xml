<root>
	<styles>
		<include src="file://{resources}/styles/chaosstyles.css" />
		<include src="file://{resources}/styles/hud/keypress.css" />
	</styles>

	<MomHudKeyPress>
		<Panel id="ArrowKeysAndMouse">
			<Panel id="ArrowKeys">
				<Panel id="KeyForward" class="arrow-key" text="Forward">
					<Image id="KeyForwardIcon" class="arrow-key-icon" src="file://{images}/icon_arrow_right.svg" textureheight="32" />
				</Panel>
				<Panel id="KeyBack" class="arrow-key" text="Back">
					<Image id="KeyBackIcon" class="arrow-key-icon" src="file://{images}/icon_arrow_right.svg" textureheight="32" />
				</Panel>
				<Panel id="KeyMoveLeft" class="arrow-key" text="Left">
					<Image id="KeyMoveLeftIcon" class="arrow-key-icon" src="file://{images}/icon_arrow_right.svg" textureheight="32" />
				</Panel>
				<Panel id="KeyMoveRight" class="arrow-key" text="Right">
					<Image id="KeyMoveRightIcon" class="arrow-key-icon" src="file://{images}/icon_arrow_right.svg" textureheight="32" />
				</Panel>
			</Panel>

			<Label id="KeyMouse1" class="key" text="M1" />
			<Label id="KeyMouse2" class="key" text="M2" />
		</Panel>

		<Label id="KeyJump" class="key" text="JUMP" />
		<Label id="KeyDuck" class="key" text="DUCK" />
		<Label id="KeyWalk" class="key" text="WALK" />
		<Label id="KeyStrafe" class="key" text="STRAFE" />
		<Label id="KeySprint" class="key" text="SPRINT" />

		<Label id="KeyLeft" />
		<Label id="KeyRight" />

		<Label id="CountStrafes" class="key" text="{i:strafes}" />
		<Label id="CountJumps" class="key" text="{i:jumps}" />
	</MomHudKeyPress>
</root>