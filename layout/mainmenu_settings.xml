<!-- MOM_TODO: Localise lots of stuff in here -->
<root>
	<styles>
		<include src="file://{resources}/styles/chaosstyles.css" />
		<include src="file://{resources}/styles/mainmenu.css"/>
		<include src="file://{resources}/styles/settings/settings_shared.css"/>
	</styles>
	
	<scripts>
		<include src="file://{resources}/scripts/settings_shared.js"/>
		<include src="file://{resources}/scripts/mainmenu_settings.js"/>
		<include src="file://{resources}/scripts/settings_search.js"/>
		
	</scripts>
	
	<Panel class="mainmenu-content__container" useglobalcontext="true">
		
		<Panel class="settings-header full-width">
			<Label class="header" text="Settings"/>

			<Panel class="settings-search">
				<Image src="file://{images}/settings/searchIcon.svg" textureheight="64" />
				<Panel class="settings-search-inner" acceptsfocus="true">
					<TextEntry id="SettingsSearchTextEntry" maxchars="30" placeholder="Search..." /> 
					<Button id="SettingsSearchClear" onactivate="SettingsMenuSearch.ClearSearch()">
						<Image src="file://{images}/settings/searchCloseIcon.svg" textureheight="32" />
					</Button>
				</Panel>
			</Panel>
		</Panel>

		<Panel class="content-navbar">
			<Panel class="content-navbar__tabs tab-group">
				<RadioButton id="InputRadio" group="SettingsNavBar" onactivate='MainMenuSettings.navigateToTab("InputSettings")' selected="true">
				  <Label text="Input"/>
				</RadioButton>

				<RadioButton id="AudioRadio" group="SettingsNavBar" onactivate='MainMenuSettings.navigateToTab("AudioSettings")'>
				  <Label text="Audio"/>
				</RadioButton>

				<RadioButton id="VideoRadio" group="SettingsNavBar" onactivate='MainMenuSettings.navigateToTab("VideoSettings")'>
				  <Label text="Video"/>
				</RadioButton>

				<RadioButton id="OnlineRadio" group="SettingsNavBar" onactivate='MainMenuSettings.navigateToTab("OnlineSettings")'>
				  <Label text="Online"/>
				</RadioButton>

				<RadioButton id="GameplayRadio" group="SettingsNavBar" onactivate='MainMenuSettings.navigateToTab("GameplaySettings")'>
				  <Label text="Gameplay"/>
				</RadioButton>

				<RadioButton id="HudRadio" group="SettingsNavBar" onactivate='MainMenuSettings.navigateToTab("HUDSettings")'>
				  <Label text="HUD"/>
				</RadioButton>
			</Panel>
		</Panel>

		<Panel id="SettingsMenuContent" class="full-width full-height">

		</Panel>
	</Panel>
</root>